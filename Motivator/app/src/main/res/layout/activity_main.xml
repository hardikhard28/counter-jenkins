<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    android:background="@color/teal_200"
    android:layout_margin="20dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/main_activity_iv_motivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/motivate_iv"
        app:srcCompat="@drawable/ic_baseline_insert_emoticon_24" />

    <TextView
        android:id="@+id/motivate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="@string/motivate_text_main_activity" />
    <EditText
        android:id="@+id/activity_main_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/name_et"
        android:inputType="text"
        android:autofillHints="" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_me_bro"
        android:id="@+id/activity_main_btn"
        />

</LinearLayout>